@startuml
skinparam handwritten true
left to right direction
skinparam packageStyle rectangle

actor Customer
actor "Restaurant Staff" as Staff
actor "System Administrator" as Admin

rectangle "QuickBite Food Ordering System" {
  usecase "Register Account" as UC1
  usecase "Login" as UC2
  usecase "Browse Available Foods" as UC3
  usecase "Create Order" as UC4
  usecase "Track Own Orders" as UC5
  usecase "View/Update Profile" as UC6

  usecase "Manage Menu Items" as UC7
  usecase "Upload Food Image" as UC8
  usecase "View Staff Orders" as UC9
  usecase "Approve Order" as UC10
  usecase "Reject Order" as UC11
  usecase "Manage Inventory" as UC12

  usecase "View Notifications" as UC13
  usecase "Mark Notifications Read" as UC14

  usecase "Administer Data via Django Admin" as UC15
}

Customer --> UC1
Customer --> UC2
Customer --> UC3
Customer --> UC4
Customer --> UC5
Customer --> UC6
Customer --> UC13
Customer --> UC14

Staff --> UC2
Staff --> UC7
Staff --> UC8
Staff --> UC9
Staff --> UC10
Staff --> UC11
Staff --> UC12
Staff --> UC13
Staff --> UC14

Admin --> UC15

UC10 ..> UC13 : <<triggers>>
UC11 ..> UC13 : <<triggers>>
UC4 ..> UC13 : <<triggers>>

@enduml
